<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../components/head.ejs") %>
    <title>Register | Click Fit</title>
  </head>
  <body>
    <header><%- include("../components/header.ejs") %></header>
    <main class="main-container">
      <section class="other-pages-containers">
        <h1>Register | Click Fit</h1>
        <form id="registrationForm" action="">
          <div class="input-error-fields">
            <label for="name">Full Name</label>
            <input type="text" id="name" name="name" />
            <span id="name-error" class="error-fields"></span>
          </div>
          <div class="input-error-fields">
            <label for="email">Email Address</label>
            <input type="text" id="email" name="email" />
            <span id="email-error" class="error-fields"></span>
          </div>
          <div class="input-error-fields">
            <label for="phone">Phone Number</label>
            <input type="text" id="phone" name="phone" />
            <span id="phone-error" class="error-fields"></span>
          </div>
          <div class="input-error-fields">
            <label for="password">Password</label>
            <input type="text" id="password" name="password" />
            <span id="password-error" class="error-fields"></span>
          </div>
          <button type="submit">Register</button>
        </form>
      </section>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="../script.js"></script>
  </body>
</html>
